<%- model_class = Product -%>
<div class="page-header">
  <h1>My Profile</h1>
</div>

<!-- user profile info -->
<table class="table table-striped">
  <thead>
     <tr>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
     </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= image_tag @user.image_url(:small_thumb).to_s %></td>
      <td><%= @user.username %></td>
      <td><%= @user.email %></td>

    </tr>
  </tbody>
</table>

| <%= link_to 'Edit Profile', edit_user_registration_path %> |

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <!-- <th><model_class.human_attribute_name(:qty)></th> -->
      <th><%= model_class.human_attribute_name(:blurb) %></th>
      <!-- <th><model_class.human_attribute_name(:description)></th> -->
      <!-- <th><model_class.human_attribute_name(:weight)></th> -->
      <!-- <th><model_class.human_attribute_name(:shipping_weight)></th> -->
      <!-- <th><model_class.human_attribute_name(:category)></th> -->
      <!-- <th><model_class.human_attribute_name(:subcategory)></th> -->
      <th><%= model_class.human_attribute_name(:image) %></th>
      <!-- <th><model_class.human_attribute_name(:size)></th> -->
      <!-- <th><model_class.human_attribute_name(:options)></th> -->
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @user.products.each do |product| %>
      <tr>
        <td><%= link_to product.id, product_path(product) %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <!-- <td><product.qty></td> -->
        <td><%= product.blurb %></td>
        <!-- <td><product.description></td> -->
        <!-- <td><product.weight></td> -->
        <!-- <td><product.shipping_weight></td> -->
        <!-- <td><product.category></td> -->
        <!-- <td><product.subcategory></td> -->
        <td><%= image_tag product.image_url(:big_thumb).to_s %></td>
        <!-- <td><product.images></td> -->
        <!-- <td><product.size></td> -->
        <!-- <td><product.options></td> -->
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
